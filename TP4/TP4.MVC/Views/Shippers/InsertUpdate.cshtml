@model TP4.MVC.Models.ShippersView

@{
    ViewBag.Title = "Shippers Page for creating and updating";
}

<!DOCTYPE html>
@using (Html.BeginForm("InsertUpdate", "Shippers", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label>Nombre: </label> @Html.TextBoxFor(s => s.CompanyName, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.CompanyName, null, new { @class = "text-danger" })<br>
    </div>
    <div>
        @Html.LabelFor(s => s.Phone)<br>
        @Html.TextBoxFor(s => s.Phone)<br>
    </div>
    <div>
        <br><input type="submit" class="btn btn-success" value=Enviar />
    </div>
}
